* {
	margin: 0;
	padding: 0;
	border: 0;
	box-sizing: border-box;
}

*:before,
*:after {
	box-sizing: border-box;
}

ol,
ul {
	list-style: none;
}

article,
aside,
details,
figcaption,
figure,
footer,
header,
hgroup,
menu,
nav,
section,
main,
audio,
canvas,
video {
	display: block;
	margin: 0;
	padding: 0;
}

html {
	height: 100%;
	font-size: 62.5%;
}

body {
	height: 100%;
}

main#content {
	grid-column: 2 / -1;
}

body,
input,
button,
select,
textarea {
	font-family: 'Source Code Pro', mono, sans-serif;
	font-size: 18px;
	line-height: 1.5;
	font-weight: normal;
}

.homeCube {
	stop-color: #FF79C6;
}

input {
  color: rgba(40, 42, 54, 0.3);
  background: var(--color-white);
  border: 1px solid var(--color-dark);
  padding: 1rem;
  margin-bottom: 1rem;

  &:focus {
    color: rgba(40, 42, 54, 0.8);
    outline: none;
  }
}

select {
  appearance: none;
  background: var(--color-white) url('~@/assets/img/ArrowDown.svg') 92% / 8% no-repeat;
  color: rgba(40, 42, 54, 0.3);
  border: 1px solid var(--color-dark);
  padding: 1rem;
  padding-right: 6rem;

  &:focus, &:active {
    color: rgba(40, 42, 54, 0.8);
    outline: none;
  }
}

input, select {
  width: 35%;
}

a {
	color: var(--color-dark);
	text-decoration: none;
	transition: all 0.4s ease-in-out;
}

a:hover {
	cursor: pointer;
	text-decoration: none;
}

img {
	height: auto;
	max-width: 100%;
	display: block;
}

::selection {
	color: var(--color-white);
	background: var(--color-pink);
}

::-moz-selection {
	color: var(--color-white);
	background: var(--color-pink);
}

.site-wrapper {
	display: grid;
  grid-template: 1fr/42rem repeat(12, 1fr);
	position: relative;	
}

h1, .h1, h2, .h2, h3, .h3, h4, .h4, h5, .h5, h6, .h6 {
	display: block;
	font-family: "Fira Sans";
	font-weight: 400;
}

h1,
.h1 {
	font-size: 4rem;
	line-height: 1.16;
	letter-spacing: -0.125rem;
	margin-bottom: 3.6rem;
}

h2,
.h2 {
	font-size: 3.2rem;
	line-height: 1.16;
	letter-spacing: -0.125rem;
	margin-bottom: 2.4rem;
}

h3,
.h3 {
	font-size: 2.8rem;
	line-height: 1.214;
	letter-spacing: -0.125rem;
	margin-bottom: 2rem;
	padding: 4rem;
  margin-top: -3rem;
  color: var(--color-white);
  background: var(--color-dark);
}

h4,
.h4 {
	font-size: 16px;
	line-height: 1.05;
	letter-spacing: -0.125rem;
	margin-bottom: 24px;
}

h5,
.h5 {
	font-size: 14px;
	line-height: 1.05;
	letter-spacing: -0.125rem;
	margin-bottom: 16px;
}

h6,
.h6 {
	line-height: 1.05;
	margin-bottom: 16px;
	font-family: 'Source Code Pro';
  text-transform: none;
  color: var(--color-dark);
  font-weight: 400;
  letter-spacing: 0.25px;
  font-size: 16px;
}

.p,
p {
	display: block;
	font-size: 18px;
	font-family: 'Source Code Pro', serif;
	line-height: 1.5;
	margin-bottom: 18px;
	font-weight: 400;
	letter-spacing: 0;
}

.inputFlex {
  display: flex;
  flex-direction: column;
  padding: 3rem 4rem;
  border: 1px solid rgba(40, 42, 54, 0.3);
  // border: 1px solid var(--color-dark);
  margin-bottom: 2rem;

  div {
    margin-bottom: 2rem;

    &:last-child {
      margin-bottom: 0;
    }
  }
}

pre {
	white-space: pre;
	background: transparent;
	padding: 2rem 4rem 0;
	margin-bottom: 2rem;
	border-width: 0.1rem;
	border-style: solid;
	border-image: var(--gradient-dark) 1;
	overflow: scroll;
}

code {
	padding: 0;
	span {
		color: var(--color-pink);
		&.green {
			color: var(--color-gradient-6);
		}
		&.purple {
			color: var(--color-gradient-4);
		}
		&.blue {
			color: var(--color-gradient-5);
		}
		&.bold {
			color: var(--color-dark);
			font-weight: bold;
		}
	}
}

.before-enter {
  opacity: 0;
}

.enter {
  transition: opacity 2s ease;  
}

.fade-enter {
	transform: translateX(1rem);
	opacity: 0;
}

.fade-enter-active,
.fade-leave-active {
	transition: all 0.4s ease;	
}

.fade-leave-to {
	transform: translateX(-1rem);
	opacity: 0;	
}
